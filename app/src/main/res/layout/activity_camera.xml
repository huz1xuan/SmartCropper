<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- CameraX 相机预览 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部控制栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:padding="16dp"
        android:background="#80000000">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- 手动调整开关 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手动调整"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Switch
                    android:id="@+id/switch_manual_adjust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- 自动拍照开关 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动拍照"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Switch
                    android:id="@+id/switch_auto_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 自动拍照状态提示 -->
    <TextView
        android:id="@+id/tv_auto_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="自动拍照已开启 (1秒/张)"
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- 处理模式提示 -->
    <TextView
        android:id="@+id/tv_mode_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="自动处理模式：边缘检测+裁剪+矫正"
        android:textColor="#2196F3"
        android:textSize="12sp"
        android:visibility="visible" />

    <!-- 拍照统计信息 -->
    <TextView
        android:id="@+id/tv_capture_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="拍照统计：已拍 0 张，跳过 0 张"
        android:textColor="#FFEB3B"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- 底部控制栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="32dp"
        android:gravity="center"
        android:background="#80000000">

        <!-- 文档处理按钮 -->
        <Button
            android:id="@+id/btn_document_process"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/capture_button_bg"
            android:text="📄"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginEnd="16dp" />

        <!-- 拍照按钮 -->
        <Button
            android:id="@+id/btn_capture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/capture_button_bg"
            android:text="📷"
            android:textSize="24sp" />

        <!-- 占位 -->
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</FrameLayout>